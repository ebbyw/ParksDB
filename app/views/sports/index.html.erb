<p id="notice"><%= notice %></p>

<h1>Sports</h1>

<table>
  <thead>
    <tr>
      <th>Baseball</th>
      <th>Basketball</th>
      <th>Lacrosse</th>
      <th>Tennis</th>
      <th>Soccer</th>
      <th>Volleyball</th>
      <th>Football</th>
      <th>Frisbee</th>
      <th>Golf</th>
      <th>Cricket</th>
      <th>Track</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sports.each do |sport| %>
      <tr>
        <td><%= sport.baseball %></td>
        <td><%= sport.basketball %></td>
        <td><%= sport.lacrosse %></td>
        <td><%= sport.tennis %></td>
        <td><%= sport.soccer %></td>
        <td><%= sport.volleyball %></td>
        <td><%= sport.football %></td>
        <td><%= sport.frisbee %></td>
        <td><%= sport.golf %></td>
        <td><%= sport.cricket %></td>
        <td><%= sport.track %></td>
        <td><%= link_to 'Show', sport %></td>
        <td><%= link_to 'Edit', edit_sport_path(sport) %></td>
        <td><%= link_to 'Destroy', sport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

